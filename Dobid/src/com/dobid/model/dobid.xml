<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd" >
<sqlMap namespace="dobid">

	<typeAlias alias="auction_participantDTO" type="com.dobid.beans.Auction_participantDTO" />
	<typeAlias alias="auction_reviewDTO" type="com.dobid.beans.Auction_reviewDTO" />
	<typeAlias alias="auctionDTO" type="com.dobid.beans.AuctionDTO" />
	<typeAlias alias="basketDTO" type="com.dobid.beans.BasketDTO" />
	<typeAlias alias="chargeDTO" type="com.dobid.beans.ChargeDTO" />
	<typeAlias alias="commentDTO" type="com.dobid.beans.CommentDTO" />
	<typeAlias alias="freeboardDTO" type="com.dobid.beans.FreeboardDTO" />
	<typeAlias alias="groupbuy_participantDTO" type="com.dobid.beans.Groupbuy_participantDTO" />
	<typeAlias alias="groupbuy_reviewDTO" type="com.dobid.beans.Groupbuy_reviewDTO" />
	<typeAlias alias="groupbuyDTO" type="com.dobid.beans.GroupbuyDTO" />
	<typeAlias alias="memberDTO" type="com.dobid.beans.MemberDTO" />
	<typeAlias alias="messageDTO" type="com.dobid.beans.MessageDTO" />
	<typeAlias alias="noticeboardDTO" type="com.dobid.beans.NoticeboardDTO" />
	<typeAlias alias="service_answerDTO" type="com.dobid.Service_answerDTO" />
	<typeAlias alias="serviceDTO" type="com.dobid.beans.ServiceDTO" />

	<!-- 회원가입 -->
	<insert id="registAccount" parameterClass="memberDTO">
		insert into member values (#member_id#, #name#, #pass#, #phone#, #email#,
		#address#, #nickname#, #introduction#, #birthday#, #charging_amount#)
	</insert>
	<!-- 로그인 -->
	<select id="login" parameterClass="memberDTO" resultClass="String">
		select id from member where id = #id# and pass = #pass#
	</select>
	
	<!-- 게시판 리스트보기(공지) -->
	<select id="NoticeSelectAll" parameterClass="NoticeboardDTO">
		select basic_board_num,member_id,title,cilck_count,upload_date from noticeboard
	</select>
	
	<!-- 게시판 리스트보기(자유) -->
	<select id="FreeSelectAll" parameterClass="FreeboardDTO">
		select basic_board_num,member_id,title,cilck_count,upload_date from freeboard
	</select>
	
	<!-- 게시판 상세보기(공지) -->
	<select id="NoticeSelect" parameterClass="NoticeboardDTO" resultClass="String">
		select basic_board_num,member_id,title,cilck_count,upload_date from noticeboard where basic_board_num=#basic_board_num#
	</select>
	
	<!-- 게시판 상세보기(자유) -->
	<select id="FreeSelect" parameterClass="FreeboardDTO" resultClass="String">
		select basic_board_num,member_id,title,cilck_count,upload_date from freeboard where basic_board_num=#basic_board_num#
	</select>
	
	
	<!-- 자유게시판 글쓰기 -->
	<insert id="FreeBoardWrite" parameterClass="FreeboardDTO">
		insert into freeboard values (freeboard_seq,#member_id#,#title#,#contents#,#image_path#,#cilck_count#,#upload_date#)
	</insert>
</sqlMap>








